<%- include ('../partials/header'); %>

<div class="container m-5">
    <h1 class = "mb-3" style="text-align: center;">Edit <%= blog.name %></h1>

    <div >
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group myForm">
                <input class="form-control" type="text" name="blog[name]" placeholder="name" value="<%= blog.name %>">
            </div>
            <div class="form-group myForm">
                <input class="form-control" type="text" name="blog[image]" placeholder="image url" value="<%= blog.image %>">
            </div>
            <div class="form-group myForm">
                <textarea class="form-control exampleFormControlTextarea1" placeholder="description" type="text" name="blog[description]" value="<%= blog.description %>"></textarea>
            </div>
            <div class="form-group myForm">
                <button class=" btn btn-warning btn-block">Update Blog</button>
            </div>
    
        </form>
        <a href="/blogs" type="button" class="btn btn-secondary">Go Back</a>
    </div>
    
   
    
    
</div>



<%- include ('../partials/footer'); %>